<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beer Name"
        style="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/tv_brewery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brewerey Name" />

    <TextView
        android:id="@+id/tv_brewery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brewery address" />

    <TextView
        android:id="@+id/tv_brewery_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short info, Bonne biere, touche caramel \n Manque un peu de caractere a mon gout pour une brune mais sympa a boire" />

    <Button
        android:id="@+id/btn_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_rate" />

</LinearLayout>