<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_rate"
        app:layout_constraintStart_toStartOf="@+id/tv_brewery_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_brewery_address" />

    <RatingBar
        android:id="@+id/rb_beer"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        app:layout_constraintBottom_toTopOf="@+id/tv_brewery_name"
        app:layout_constraintStart_toStartOf="@+id/tv_beer_name" />

    <TextView
        android:id="@+id/tv_brewery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brewerey Name"
        app:layout_constraintBottom_toTopOf="@+id/tv_brewery_address"
        app:layout_constraintStart_toStartOf="@+id/rb_beer"
        app:layout_constraintTop_toBottomOf="@+id/tv_beer_name" />

    <TextView
        android:id="@+id/tv_brewery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="407dp"
        android:text="Brewery address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_brewery_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_brewery_name" />

    <TextView
        android:id="@+id/tv_beer_name"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="17dp"
        android:text="Beer Name"
        app:layout_constraintBottom_toTopOf="@+id/tv_brewery_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:elevation="12dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_beer_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_beer_name"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>